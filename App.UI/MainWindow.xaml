<Window
    x:Class="App.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:App.UI.ViewModels"
    mc:Ignorable="d"
    Title="Lords Mobile Bot Dashboard">

    <Grid x:Name="RootGrid" Padding="16" RowDefinitions="Auto,Auto,*" RowSpacing="12">
        <TextBlock Text="Lords Bot Control Center" FontSize="24" FontWeight="SemiBold" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
            <Button Content="Start Bot" Command="{Binding StartCommand}" />
            <Button Content="Stop Bot" Command="{Binding StopCommand}" />
            <TextBlock Text="Max Army:" VerticalAlignment="Center" Margin="12,0,0,0" />
            <TextBox Text="{Binding MaxArmyLimitText, Mode=TwoWay}" Width="60" />
            <TextBlock Text="Status:" VerticalAlignment="Center" Margin="12,0,0,0" />
            <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center" FontWeight="SemiBold" />
        </StackPanel>

        <Border Grid.Row="2" BorderThickness="1" Padding="8" CornerRadius="4">
            <ScrollViewer x:Name="LogsScrollViewer">
                <ItemsControl ItemsSource="{Binding LogEntries}" />
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
